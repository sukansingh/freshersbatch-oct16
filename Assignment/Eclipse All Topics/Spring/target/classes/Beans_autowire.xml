<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<bean id="project_1" class="com.spring.beans.ProjectBean">
	    <property name="name" value="OpenOffice" />
	    <property name="department" value="Support" />
	</bean>
	
	<bean id="project_2" class="com.spring.beans.ProjectBean">
	    <property name="name" value="MSOffice" />
	    <property name="department" value="Support" />
	</bean>
	
		<bean id="employee" class="com.spring.beans.EmployeeBean">
	    <property name="name" value="Ivan" />
	</bean>

	<!-- Enable Annotation based configuration -->
	<context:annotation-config />
</beans>